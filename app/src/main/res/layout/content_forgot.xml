<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_forgot"
        tools:context=".UI.activity.ForgotActivity">
    <androidx.viewpager.widget.ViewPager android:layout_width="match_parent"
                                         android:id="@+id/viewpager"
                                         android:visibility="gone"
                                         android:layout_height="match_parent">

    </androidx.viewpager.widget.ViewPager>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:background="#C0C0C0"
                    android:id="@+id/view_parent"
                    android:layout_height="match_parent"
                    tools:context=".UI.fragment.OTPFragment">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                      android:orientation="vertical"
                      android:visibility="visible"
                      android:background="@drawable/sign_back_ground"
                      android:id="@+id/layout_otp_password"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent">
            <RelativeLayout android:layout_width="match_parent"
                            android:layout_height="wrap_content">
            <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    android:text="VERIFICATION"
                    android:textColor="@color/white"
                    android:textSize="20dp" />

            <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_below="@+id/textView2"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="-30dp"
                    android:background="@drawable/round_corner"
                    android:padding="10dp"
                    app:srcCompat="@drawable/otp_img_tag" />
            </RelativeLayout>

            <ScrollView android:layout_width="match_parent" android:layout_height="match_parent">

                <LinearLayout android:layout_width="match_parent"
                              android:orientation="vertical"
                              android:paddingBottom="40dp"
                              android:layout_height="match_parent">

                    <TextView
                            android:layout_width="match_parent"
                            android:text="Please enter the OTP we have sent to your registered Email Id"
                            android:layout_marginTop="20dp"
                            android:textSize="14sp"
                            android:gravity="center"
                            android:layout_height="wrap_content"/>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginLeft="25dp"
                            android:layout_marginRight="25dp"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:visibility="visible">

                        <EditText
                                android:id="@+id/pin_one"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/otp_background"
                                android:imeOptions="actionNext"
                                android:inputType="textCapCharacters"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:textSize="15dp" />

                        <EditText
                                android:id="@+id/pin_two"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginLeft="10dp"
                                android:background="@drawable/otp_background"
                                android:imeOptions="actionNext"
                                android:inputType="textCapCharacters"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:textSize="15dp" />

                        <EditText
                                android:id="@+id/pin_three"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginLeft="10dp"
                                android:background="@drawable/otp_background"
                                android:imeOptions="actionNext"
                                android:inputType="textCapCharacters"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:textSize="15dp" />

                        <EditText
                                android:id="@+id/pin_four"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginLeft="10dp"
                                android:background="@drawable/otp_background"
                                android:imeOptions="actionNext"
                                android:inputType="textCapCharacters"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:textSize="15dp" />

                        <EditText
                                android:id="@+id/pin_five"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginLeft="10dp"
                                android:background="@drawable/otp_background"
                                android:imeOptions="actionNext"
                                android:inputType="textCapCharacters"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:textSize="15dp" />

                        <EditText
                                android:id="@+id/pin_six"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginLeft="10dp"
                                android:background="@drawable/otp_background"
                                android:imeOptions="actionNext"
                                android:inputType="textCapCharacters"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:textSize="15dp" />

                        <!--<ImageView-->
                        <!--android:id="@+id/verify_btn"-->
                        <!--android:layout_width="33dp"-->
                        <!--android:layout_height="33dp"-->
                        <!--android:layout_marginLeft="10dp"-->
                        <!--android:src="@drawable/arwright"-->
                        <!--android:tint="@color/white"-->
                        <!--android:padding="9dp"-->
                        <!--android:background="@color/colorPrimary"-->
                        <!--android:textAllCaps="false"-->
                        <!--android:textColor="@color/white"-->
                        <!--android:textSize="15dp"/>-->
                    </LinearLayout>
                    <TextView
                            android:layout_width="wrap_content"
                            android:text="@string/resend"
                            android:layout_alignParentRight="true"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="14sp"
                            android:layout_marginRight="4dp"
                            android:layout_marginTop="15dp"
                            android:layout_gravity="center"
                            android:id="@+id/txt_resend_otp"
                            android:layout_height="wrap_content"/>
                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_marginTop="15dp"
                            android:layout_height="wrap_content">
                        <TextView
                                android:layout_width="wrap_content"
                                android:text="New Password"
                                android:textSize="14sp"
                                android:layout_centerInParent="true"
                                android:layout_gravity="center"
                                android:layout_height="wrap_content"/>



                    </RelativeLayout>

                    <RelativeLayout android:layout_width="match_parent"

                                    android:layout_marginTop="5dp"
                                    android:layout_height="42dp">
                        <EditText
                                android:id="@+id/new_password_edittext"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_centerHorizontal="true"
                                android:layout_marginLeft="55dp"
                                android:gravity="center_vertical"
                                android:imeOptions="actionNext"
                                android:paddingLeft="15dp"
                                android:inputType="textPassword"
                                android:textColor="@color/colorPrimary"
                                android:textSize="15dp"
                                android:layout_marginRight="55dp"
                                android:background="@drawable/round_border"/>
                        <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                app:srcCompat="@drawable/info"
                                android:layout_marginRight="10dp"
                                android:padding="6dp"
                                android:tint="@color/text_gray"
                                android:layout_alignParentRight="true"
                                android:id="@+id/pasword_info"/>


                    </RelativeLayout>
                    <TextView
                            android:layout_width="wrap_content"
                            android:text="Confirm Password"
                            android:layout_marginTop="10dp"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content"/>
                    <RelativeLayout android:layout_width="match_parent"

                                    android:layout_marginTop="5dp"
                                    android:layout_height="42dp">

                        <EditText
                                android:id="@+id/confirm_password_edittext"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_centerHorizontal="true"
                                android:layout_marginLeft="55dp"
                                android:gravity="center_vertical"
                                android:inputType="textPassword"
                                android:imeOptions="actionDone"
                                android:paddingLeft="15dp"
                                android:textColor="@color/colorPrimary"
                                android:textSize="15dp"
                                android:layout_marginRight="55dp"
                                android:background="@drawable/round_border"/>
                        <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                app:srcCompat="@drawable/info"
                                android:layout_marginRight="10dp"
                                android:padding="6dp"
                                android:visibility="gone"
                                android:tint="@color/text_gray"
                                android:layout_alignParentRight="true"
                                android:id="@+id/confirm_info"/>


                    </RelativeLayout>
                    <TextView
                            android:id="@+id/reset_btn"
                            android:layout_width="180dp"
                            android:layout_height="32dp"
                            android:layout_below="@+id/forgot_password_lyt"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="30dp"
                            android:backgroundTint="#D5D2D2"
                            android:background="@drawable/round_back_view"
                            android:elevation="2dp"
                            android:gravity="center"

                            android:layout_gravity="center"
                            android:text="Reset"
                            android:textAllCaps="true"
                            android:foreground="?android:attr/selectableItemBackgroundBorderless"
                            android:textColor="@color/colorPrimary"
                            android:textSize="15dp"/>

                </LinearLayout>
            </ScrollView>


        </LinearLayout>
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                      android:orientation="vertical"
                      android:visibility="gone"
                      android:background="@drawable/sign_back_ground"
                      android:layout_width="match_parent"
                      android:id="@+id/layout_request_mail"
                      android:layout_height="match_parent">
            <ImageView
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:layout_marginTop="40dp"
                    android:layout_gravity="center"
                    app:srcCompat="@mipmap/lji_logo_new_trans"/>
            <TextView
                    android:layout_width="match_parent"
                    android:text="@string/forgot_display_desc"
                    android:layout_marginTop="15dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:layout_below="@+id/imageView"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"/>
            <EditText
                    android:id="@+id/email_id_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginRight="25dp"
                    android:layout_marginLeft="25dp"
                    android:hint="Email Id"
                    android:ems="10"
                    android:gravity="center_vertical"
                    android:inputType="textEmailAddress"
                    android:imeOptions="actionDone"
                    android:paddingLeft="15dp"
                    android:layout_marginTop="35dp"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15sp"
                    android:background="@drawable/round_border"/>
            <TextView
                    android:id="@+id/send_request_btn"
                    android:layout_width="180dp"
                    android:layout_height="32dp"
                    android:layout_below="@+id/forgot_password_lyt"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp"
                    android:backgroundTint="#D5D2D2"
                    android:background="@drawable/round_back_view"
                    android:elevation="2dp"
                    android:gravity="center"

                    android:layout_gravity="center"
                    android:text="Send Request"
                    android:textAllCaps="true"
                    android:foreground="?android:attr/selectableItemBackgroundBorderless"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15dp"/>
        </LinearLayout>
        <RelativeLayout android:layout_width="match_parent"
                        android:gravity="center"
                        android:visibility="gone"
                        android:clickable="true"
                        android:background="@color/trasnsparentBlack"
                        android:id="@+id/progress_lyt"
                        android:layout_height="match_parent">
            <com.wang.avi.AVLoadingIndicatorView
                    android:layout_width="wrap_content"
                    android:id="@+id/pro_img"

                    android:layout_centerHorizontal="true"
                    android:layout_height="wrap_content"
                    app:indicatorName="BallTrianglePathIndicator"
                    app:indicatorColor="@color/white"
            />
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:text="Processing..."
                      android:textColor="@color/white"
                      android:layout_marginTop="10dp"
                      android:gravity="center"
                      android:layout_below="@+id/pro_img"
                      android:textSize="18dp"/>



        </RelativeLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>