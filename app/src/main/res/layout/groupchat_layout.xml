<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/chat_content_parent"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/txt_date_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@color/white_trans"
        android:gravity="center"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingTop="4dp"
        android:paddingBottom="8dp"
        android:textAllCaps="true"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="10sp" />

    <RelativeLayout
        android:id="@+id/layout_chat_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:background="@color/white"
        android:paddingTop="2dp"
        android:paddingBottom="4dp">

        <ru.rambler.libs.swipe_layout.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/swipe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <!--grp-->
                <RelativeLayout
                    android:id="@+id/left_layout_chat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="48dp"
                    android:visibility="gone">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                            <RelativeLayout
                                android:id="@+id/lay_avatar_time"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:id="@+id/img_avatar_chat"
                                    android:layout_width="30dp"
                                    android:layout_centerHorizontal="true"
                                    android:layout_height="30dp"
                                    android:layout_gravity="center"
                                    app:civ_border_color="#D5D4D4"
                                    android:src="@drawable/com_facebook_profile_picture_blank_portrait"
                                    app:civ_border_width="0.8dp" />

                                <TextView
                                    android:layout_below="@+id/img_avatar_chat"
                                    android:id="@+id/left_txt_chat_time"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:gravity="center"
                                    android:textStyle="bold"
                                    android:text="01:20 pm"
                                    android:textAllCaps="true"
                                    android:textColor="@color/md_grey_400"
                                    android:textSize="9sp" />


                            </RelativeLayout>

                            <TextView
                                android:id="@+id/left_txt_chat_username"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/lay_avatar_time"
                                android:textColor="@color/md_grey_400"
                                android:textSize="11sp"
                                android:textStyle="bold" />


                            <RelativeLayout
                                android:id="@+id/left_chat_content"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="15dp"
                                android:layout_marginTop="4dp"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@+id/lay_avatar_time"
                                android:layout_below="@+id/left_txt_chat_username"
                                android:background="@drawable/left_chat_bubble_1"
                                android:minHeight="36dp">

                                <LinearLayout
                                    android:id="@+id/left_layout_reply_message"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="12dp"
                                    android:layout_marginRight="12dp"
                                    android:orientation="vertical"
                                    android:visibility="visible">

                                    <LinearLayout
                                        android:id="@+id/left_reply_content"
                                        android:layout_width="match_parent"
                                        android:layout_marginTop="12dp"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/rouned_corner_blue"
                                        android:orientation="horizontal"
                                        android:visibility="gone">

                                        <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="8dp"
                                            android:layout_marginTop="4dp"
                                            android:layout_marginRight="6dp"
                                            android:layout_marginBottom="4dp"
                                            android:background="@drawable/chat_reply_background">

                                            <RelativeLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_marginLeft="2.5dp"
                                                android:background="@color/light_blue_1">

                                                <RelativeLayout
                                                    android:id="@+id/left_reply_top_layout"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content">

                                                    <TextView
                                                        android:id="@+id/left_textview_replied_user_name"
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:layout_marginLeft="10dp"
                                                        android:layout_marginTop="6dp"
                                                        android:textColor="@color/colorPrimaryDark"
                                                        android:textSize="11sp" />

                                                    <TextView
                                                        android:id="@+id/left_textview_replied_time"
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:layout_alignParentRight="true"
                                                        android:layout_marginTop="6dp"
                                                        android:layout_marginRight="10dp"
                                                        android:textColor="@color/final_field_name"
                                                        android:textSize="9sp" />

                                                </RelativeLayout>

                                                <RelativeLayout
                                                    android:id="@+id/left_reply_media"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:layout_below="@+id/left_reply_top_layout"
                                                    android:layout_marginLeft="8dp">

                                                    <ImageView
                                                        android:id="@+id/left_reply_img_media"
                                                        android:layout_width="60dp"
                                                        android:layout_height="60dp"
                                                        android:layout_alignParentRight="true"
                                                        android:scaleType="centerCrop" />


                                                    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                                                        android:layout_width="20dp"
                                                        android:layout_height="20dp"
                                                        android:src="@mipmap/ic_choose_profile_image"
                                                        app:civ_border_color="#FF000000"
                                                        app:civ_border_width="0dp" />

                                                    <TextView
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:layout_marginLeft="25dp"
                                                        android:layout_marginRight="8dp"
                                                        android:text="Photo"
                                                        android:textSize="12sp" />

                                                </RelativeLayout>

                                                <TextView
                                                    android:id="@+id/left_textview_replied_message"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_below="@+id/left_reply_top_layout"
                                                    android:layout_marginLeft="8dp"
                                                    android:layout_marginRight="8dp"
                                                    android:textSize="14sp" />

                                            </RelativeLayout>
                                        </RelativeLayout>

                                    </LinearLayout>

                                    <FrameLayout
                                        android:id="@+id/left_offensive_bubble"
                                        android:layout_width="match_parent"
                                        android:layout_height="50dp"
                                        android:layout_marginTop="12dp"
                                        android:background="@drawable/left_chat_bubble"
                                        android:visibility="gone">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent">

                                            <ImageView
                                                android:layout_width="20dp"
                                                android:layout_height="20dp"
                                                android:layout_gravity="center"
                                                android:layout_marginLeft="10dp"
                                                app:srcCompat="@drawable/info_orng" />

                                            <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:layout_gravity="left"
                                                android:gravity="center|left"
                                                android:padding="6dp"
                                                android:text="This comment is hidden as it has been deemed offensive. Tap to see the comment!"
                                                android:textSize="10sp"
                                                android:textStyle="italic" />
                                        </LinearLayout>
                                    </FrameLayout>
                                </LinearLayout>

                                <RelativeLayout
                                    android:id="@+id/left_layout_image_view"
                                    android:layout_width="200dp"
                                    android:layout_height="200dp"
                                    android:layout_margin="14dp"
                                    android:layout_below="@+id/left_layout_reply_message"
                                    android:layout_centerInParent="true"
                                    android:visibility="gone">

                                    <LinearLayout
                                        android:id="@+id/left_progress"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_centerInParent="true"
                                        android:gravity="center">

                                        <ProgressBar
                                            android:layout_width="40dp"
                                            android:layout_height="40dp"
                                            android:layout_gravity="center" />
                                    </LinearLayout>

                                    <ImageView
                                        android:id="@+id/left_imageview_media"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/background" />

                                    <ImageView
                                        android:id="@+id/left_control"
                                        android:layout_width="50dp"
                                        android:layout_height="50dp"
                                        android:layout_centerHorizontal="true"
                                        android:layout_centerVertical="true"
                                        android:layout_gravity="center"
                                        android:src="@drawable/play_btn"
                                        android:visibility="gone" />
                                </RelativeLayout>


                                <TextView
                                    android:id="@+id/left_txt_msg_content"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/left_layout_reply_message"
                                    android:text="jhhh"
                                    android:gravity="left|center"
                                    android:layout_marginLeft="15dp"
                                    android:layout_marginRight="12dp"
                                    android:layout_marginTop="12dp"
                                    android:layout_marginBottom="12dp"
                                    android:textColor="@color/md_grey_600"
                                    android:textSize="12sp" />


                            </RelativeLayout>

                            <ImageView
                                android:id="@+id/left_emoji_default"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:layout_alignParentRight="true"
                                android:layout_below="@+id/left_chat_content"
                                android:layout_marginTop="-36dp"
                                android:layout_marginRight="0dp"
                                android:padding="1dp"
                                android:src="@drawable/emoji_default" />

                            <LinearLayout
                                android:id="@+id/left_reaction_layout"
                                android:layout_width="wrap_content"
                                android:layout_height="35dp"
                                android:layout_below="@+id/left_chat_content"
                                android:layout_marginTop="-36dp"
                                android:layout_marginRight="10dp"
                                android:layout_toLeftOf="@+id/left_emoji_default"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">


                                <ImageView
                                    android:id="@+id/left_emoji_red"
                                    android:layout_width="0dp"
                                    android:layout_height="32dp"
                                    android:layout_weight="1"
                                    android:alpha="0"
                                    android:padding="3dp"
                                    android:src="@drawable/emoji_red" />

                                <ImageView
                                    android:id="@+id/left_emoji_yellow"
                                    android:layout_width="0dp"
                                    android:layout_height="32dp"
                                    android:layout_weight="1"
                                    android:alpha="0"
                                    android:padding="3dp"
                                    android:src="@drawable/emoji_yellow" />


                                <ImageView
                                    android:id="@+id/left_emoji_dark_blue"
                                    android:layout_width="0dp"
                                    android:layout_height="32dp"
                                    android:layout_weight="1"
                                    android:alpha="0"
                                    android:padding="3dp"
                                    android:src="@drawable/emoji_dark_blue" />

                                <ImageView
                                    android:id="@+id/left_emoji_green"
                                    android:layout_width="0dp"
                                    android:layout_height="32dp"
                                    android:layout_weight="1"
                                    android:alpha="0"
                                    android:padding="3dp"
                                    android:src="@drawable/emoji_green" />

                                <ImageView
                                    android:id="@+id/left_emoji_light_blue"
                                    android:layout_width="0dp"
                                    android:layout_height="32dp"
                                    android:layout_weight="1"
                                    android:alpha="0"
                                    android:src="@drawable/emoji_light_blue" />


                            </LinearLayout>
                        </RelativeLayout>


                    </FrameLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/right_layout_chat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginTop="10dp"
                    android:visibility="gone">
                    <TextView
                        android:id="@+id/right_txt_chat_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="4dp"
                        android:gravity="center"
                        android:layout_marginRight="16dp"
                        android:textAllCaps="true"
                        android:textColor="@color/md_grey_400"
                        android:textSize="9sp" />
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_marginLeft="46dp"
                        android:layout_toRightOf="@+id/right_txt_chat_time"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/right_chat_bubble_1"
                                android:minHeight="36dp">

                                <LinearLayout
                                    android:id="@+id/right_layout_reply_message"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/right_txt_chat_username"
                                    android:backgroundTint="#ecedec"
                                    android:orientation="vertical"
                                    android:layout_marginLeft="12dp"
                                    android:layout_marginTop="12dp"
                                    android:layout_marginRight="12dp"
                                    android:visibility="gone">

                                    <LinearLayout
                                        android:id="@+id/right_reply_content"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/rouned_corner_blue"
                                        android:orientation="horizontal">

                                        <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="8dp"
                                            android:layout_marginTop="4dp"
                                            android:layout_marginRight="6dp"
                                            android:layout_marginBottom="4dp"
                                            android:background="@drawable/chat_reply_background">

                                            <RelativeLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_marginLeft="2.5dp"
                                                android:background="@color/light_blue_1">

                                                <RelativeLayout
                                                    android:id="@+id/right_reply_top_layout"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content">

                                                    <TextView
                                                        android:id="@+id/right_textview_replied_user_name"
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:layout_marginLeft="10dp"
                                                        android:layout_marginTop="6dp"
                                                        android:textColor="@color/colorPrimaryDark"
                                                        android:textSize="11sp" />

                                                    <TextView
                                                        android:id="@+id/right_textview_replied_time"
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:layout_alignParentRight="true"
                                                        android:layout_marginTop="6dp"
                                                        android:layout_marginRight="10dp"
                                                        android:textColor="@color/final_field_name"
                                                        android:textSize="9sp" />

                                                </RelativeLayout>

                                                <RelativeLayout
                                                    android:id="@+id/right_reply_media"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:layout_below="@+id/right_reply_top_layout"
                                                    android:layout_marginLeft="8dp">

                                                    <ImageView
                                                        android:id="@+id/right_reply_img_media"
                                                        android:layout_width="60dp"
                                                        android:layout_height="60dp"
                                                        android:layout_alignParentRight="true"
                                                        android:scaleType="centerCrop" />


                                                    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                                                        android:layout_width="20dp"
                                                        android:layout_height="20dp"
                                                        android:src="@mipmap/ic_choose_profile_image"
                                                        app:civ_border_color="#FF000000"
                                                        app:civ_border_width="0dp" />

                                                    <TextView
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:layout_marginLeft="25dp"
                                                        android:layout_marginRight="8dp"
                                                        android:text="Photo"
                                                        android:textSize="12sp" />


                                                </RelativeLayout>

                                                <TextView
                                                    android:id="@+id/right_textview_replied_message"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_below="@+id/right_reply_top_layout"
                                                    android:layout_marginLeft="8dp"
                                                    android:layout_marginRight="8dp"
                                                    android:textSize="14sp" />


                                            </RelativeLayout>
                                        </RelativeLayout>
                                    </LinearLayout>

                                    <FrameLayout
                                        android:id="@+id/right_offensive_bubble"
                                        android:layout_width="match_parent"
                                        android:layout_height="50dp"
                                        android:layout_below="@+id/right_txt_chat_username"
                                        android:background="@drawable/left_chat_bubble"
                                        android:visibility="gone">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent">

                                            <ImageView
                                                android:layout_width="20dp"
                                                android:layout_height="20dp"
                                                android:layout_gravity="center"
                                                android:layout_marginLeft="10dp"
                                                app:srcCompat="@drawable/info_orng" />

                                            <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:layout_gravity="left"
                                                android:gravity="center|left"
                                                android:padding="6dp"
                                                android:text="This comment is hidden as it has been deemed offensive. Tap to see the comment!"
                                                android:textSize="10sp"
                                                android:textStyle="italic" />
                                        </LinearLayout>
                                    </FrameLayout>

                                </LinearLayout>

                                <RelativeLayout
                                    android:id="@+id/right_layout_image_view"
                                    android:layout_width="200dp"
                                    android:layout_height="200dp"
                                    android:layout_margin="14dp"
                                    android:layout_below="@+id/right_layout_reply_message"
                                    android:layout_centerInParent="true"
                                    android:visibility="gone">

                                    <LinearLayout
                                        android:id="@+id/right_progress"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_centerInParent="true"
                                        android:gravity="center">

                                        <ProgressBar
                                            android:layout_width="40dp"
                                            android:layout_height="40dp"
                                            android:layout_gravity="center" />
                                    </LinearLayout>

                                    <ImageView
                                        android:id="@+id/right_imageview_media"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/background" />

                                    <ImageView
                                        android:id="@+id/right_control"
                                        android:layout_width="50dp"
                                        android:layout_height="50dp"
                                        android:layout_centerHorizontal="true"
                                        android:layout_centerVertical="true"
                                        android:layout_gravity="center"
                                        android:src="@drawable/play_btn"
                                        android:visibility="gone" />
                                </RelativeLayout>

                                <TextView
                                    android:id="@+id/right_txt_chat_username"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/white"
                                    android:textSize="11sp"
                                    android:visibility="gone"
                                    android:textStyle="bold" />



                                <TextView
                                    android:id="@+id/right_txt_msg_content"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/right_layout_reply_message"
                                    android:layout_marginLeft="12dp"
                                    android:layout_marginTop="12dp"
                                    android:layout_marginBottom="12dp"
                                    android:layout_marginRight="12dp"
                                    android:gravity="left|center"
                                    android:textColor="@color/white"
                                    android:textSize="12sp" />


                            </RelativeLayout>


                        </RelativeLayout>


                    </FrameLayout>
                </RelativeLayout>
            </FrameLayout>

            <LinearLayout
                android:id="@+id/layout_msg_option"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:bring_to_clamp="150dp"
                app:clamp="self"
                app:gravity="right"
                app:sticky="100dp">

                <ImageView
                    android:id="@+id/img_delete"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="12dp"
                    android:src="@drawable/delete" />

                <ImageView
                    android:id="@+id/img_offensive"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="12dp"
                    android:src="@drawable/warning" />

                <ImageView
                    android:id="@+id/img_reply"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="12dp"
                    android:src="@drawable/reply" />


            </LinearLayout>
     <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:bring_to_clamp="150dp"
                app:clamp="self"
                app:gravity="left"
                app:sticky="none">


                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="8dp" />


            </LinearLayout>


        </ru.rambler.libs.swipe_layout.SwipeLayout>

        <FrameLayout
            android:id="@+id/offensive_bubble"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/left_chat_bubble"
            android:paddingRight="4dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    app:srcCompat="@drawable/info_orng" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:gravity="center|left"
                    android:padding="6dp"
                    android:text="This comment is hidden as it has been deemed offensive. Tap to see the comment!"
                    android:textSize="10sp"
                    android:textStyle="italic" />
            </LinearLayout>
        </FrameLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ad_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:visibility="gone">

        <RelativeLayout
            android:id="@+id/media_layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/round_border_adlayout">

            <ImageView
                android:id="@+id/img"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginLeft="14dp"
