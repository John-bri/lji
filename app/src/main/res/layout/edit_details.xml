<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent">
    <RelativeLayout android:layout_width="match_parent"
                    android:gravity="center"
                    android:visibility="gone"
                    android:clickable="true"
                    android:background="@color/trasnsparentBlack"
                    android:id="@+id/update_Layout_loading"
                    android:layout_height="match_parent">
        <com.wang.avi.AVLoadingIndicatorView
                android:layout_width="wrap_content"
                android:id="@+id/pro_img"

                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content"
                app:indicatorName="BallTrianglePathIndicator"
                app:indicatorColor="@color/white"
        />
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:text="Processing..."
                  android:textColor="@color/white"
                  android:layout_marginTop="10dp"
                  android:gravity="center"
                  android:layout_below="@+id/pro_img"
                  android:textSize="18dp"/>


    </RelativeLayout>
    <RelativeLayout
            android:id="@+id/attach_layout"
            android:layout_width="match_parent"
            android:paddingTop="20dp"
            android:paddingLeft="130dp"
            android:layout_centerVertical="true"
            android:layout_height="match_parent"
            android:clickable="true"
            android:visibility="gone"
            android:background="#41FFFFFF">

        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


            <LinearLayout
                    android:id="@+id/gallery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center">
                <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:backgroundTint="@color/colorPrimaryDark"
                        android:background="@mipmap/round_corner_rectangle_white"
                        android:gravity="center">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="Gallery"
                            android:textColor="@color/white"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                    android:id="@+id/camera"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/gallery"
                    android:layout_marginTop="10dp"
                    android:gravity="center">

                <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:backgroundTint="@color/colorPrimaryDark"
                        android:background="@mipmap/round_corner_rectangle_white"
                        android:gravity="center">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="Camera"
                            android:textColor="@color/white"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                    android:id="@+id/remove"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/camera"
                    android:layout_marginTop="10dp"
                    android:gravity="center">

                <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:backgroundTint="@color/colorPrimaryDark"
                        android:background="@mipmap/round_corner_rectangle_white"
                        android:gravity="center">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="Remove"
                            android:textColor="@color/white"/>
                </LinearLayout>
            </LinearLayout>


        </RelativeLayout>


    </RelativeLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edit_parent_layout"
            android:orientation="vertical"
            android:paddingBottom="10dp">
        <RelativeLayout android:layout_width="match_parent"
                        android:paddingTop="10dp"
                        android:paddingLeft="10dp"
                        android:paddingBottom="10dp"
                        android:layout_height="140dp">

            <RelativeLayout
                    android:layout_width="120dp"
                    android:clickable="true"
                    android:layout_centerVertical="true"
                    android:id="@+id/avatar_Layout_loading"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_height="120dp">

                <pl.droidsonroids.gif.GifImageView android:layout_width="60dp"
                                                   android:layout_centerInParent="true"
                                                   android:layout_height="60dp"
                                                   android:src="@drawable/loading"/>

            </RelativeLayout>
            <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/edit_profile_img_avatar"
                    app:civ_border_color="#FF000000"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/lji_default_img"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    app:civ_border_width="1dp"/>
            <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/ic_choose_profile_image"
                    app:civ_border_color="#FF000000"
                    android:layout_marginLeft="75dp"
                    android:layout_marginTop="85dp"
                    android:id="@+id/edit_avatar_img"
                    app:civ_border_width="0dp"/>
            <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_toRightOf="@+id/edit_profile_img_avatar"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content">

                <RelativeLayout
                        android:layout_marginLeft="20dp"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content">
                    <TextView
                            android:layout_width="wrap_content"
                            android:id="@+id/txt_edit_profile_user_name"
                            android:textSize="18sp"
                            android:textColor="#5B2685"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp"
                            android:layout_height="wrap_content"/>
                    <ImageView android:layout_width="20dp"
                               android:padding="3dp"
                               android:visibility="gone"
                               android:layout_below="@+id/txt_edit_profile_user_name"
                               android:src="@drawable/casino_token"
                               android:layout_height="18dp"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:textColor="#5B2685"
                            android:visibility="gone"
                            android:id="@+id/txt_edit_profile_token_count"
                            android:layout_marginLeft="24dp"
                            android:layout_below="@+id/txt_edit_profile_user_name"
                            android:textSize="14sp"
                            android:layout_height="wrap_content"/>


                    <TextView
                            android:id="@+id/txt_edit_profile_address"

                            android:layout_width="wrap_content"
                            android:text="nsw 3095"
                            android:textColor="#5B2685"
                            android:layout_below="@+id/txt_edit_profile_user_name"
                            android:textSize="12sp"
                            android:layout_height="wrap_content"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:text="Change Password"
                            android:id="@+id/edit_password"
                            android:textSize="16sp"
                            android:textStyle="bold"

                            android:layout_marginTop="8dp"
                            android:layout_below="@+id/txt_edit_profile_address"
                            android:textColor="@color/btn_orng"
                            android:layout_height="wrap_content"/>
                </RelativeLayout>
            </RelativeLayout>

        </RelativeLayout>

        <ScrollView

                android:layout_width="match_parent"
                android:background="@color/white"
                android:scrollbars="none"
                android:layout_height="match_parent">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:orientation="vertical">
                <RelativeLayout android:layout_width="match_parent"
                                android:layout_marginTop="15dp"
                                android:clickable="false"
                                android:layout_height="wrap_content">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:text="First Name"
                            android:id="@+id/txt_h_fname"
                            android:padding="4dp"
                            android:background="@color/white"
                            android:textSize="10dp"/>

                    <EditText
                            android:id="@+id/edit_profile_first_name"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="@drawable/round_border"
                            android:ems="10"
                            android:layout_marginTop="12dp"
                            android:gravity="center_vertical"
                            android:hint="First Name"
                            android:inputType="textCapWords"
                            android:paddingLeft="10dp"
                            android:textSize="15sp"/>


                </RelativeLayout>
                <RelativeLayout android:layout_width="match_parent"
                                android:layout_marginTop="15dp"
                                android:clickable="false"
                                android:layout_height="wrap_content">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:text="Last Name"
                            android:id="@+id/txt_h_lname"
                            android:padding="4dp"
                            android:background="@color/white"
                            android:textSize="10dp"/>

                    <EditText
                            android:id="@+id/edit_profile_last_name"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="@drawable/round_border"
                            android:ems="10"
                            android:layout_marginTop="12dp"
                            android:gravity="center_vertical"
                            android:hint="Last Name"
                            android:inputType="textCapWords"
                            android:paddingLeft="10dp"
                            android:textSize="15sp"/>


                </RelativeLayout>
                <RelativeLayout android:layout_width="match_parent"
                                android:layout_marginTop="15dp"
                                android:clickable="false"
                                android:layout_height="wrap_content">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:text="Email Id"
                            android:id="@+id/txt_h_email"
                            android:padding="4dp"
                            android:background="@color/white"
                            android:textSize="10dp"/>

                    <TextView
                            android:id="@+id/edit_profile_email_id"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="@drawable/round_border"
                            android:ems="10"
                            android:layout_marginTop="12dp"
                            android:gravity="center_vertical"
                            android:hint="Email Id"
                            android:inputType="textCapWords"
                            android:clickable="false"
                            android:paddingLeft="10dp"
                            android:textSize="15sp"/>


                </RelativeLayout>


                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_height="wrap_content">

                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="1">

                        <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_toLeftOf="@+id/layout_dob"
                                android:layout_marginRight="5dp"

                                android:padding="1dp">
                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="20dp"
                                    android:text="Gender"
                                    android:padding="4dp"
                                    android:id="@+id/txt_h_age"
                                    android:background="@color/white"
                                    android:textSize="10dp"/>
                            <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="42dp"
                                    android:layout_marginTop="12dp"
                                    android:background="@drawable/round_border"
                                    android:padding="1dp">
                                <ImageView
                                        android:layout_width="45dp"
                                        android:src="@mipmap/shape_down"
                                        android:layout_centerVertical="true"
                                        android:layout_alignParentRight="true"
                                        android:tint="@color/colorPrimaryDark"
                                        android:layout_height="10dp"/>
                                <Spinner
                                        android:id="@+id/edit_profile_gender_input"
                                        android:layout_width="@dimen/spinner_width"
                                        android:layout_height="50dp"
                                        android:layout_centerHorizontal="true"
                                        android:dropDownWidth="match_parent"
                                        android:background="@null"
                                        android:ems="10"
                                        android:entries="@array/sex"
                                        android:gravity="center"
                                        android:inputType="textCapWords"
                                        android:overlapAnchor="false"
                                        android:spinnerMode="dropdown"
                                        android:paddingLeft="2dp"
                                        android:textSize="10sp"/>
                            </RelativeLayout>
                        </RelativeLayout>
                        <RelativeLayout
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/layout_dob"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="5dp"
                                android:padding="1dp">
                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="20dp"
                                    android:text="Year of Birth"
                                    android:padding="4dp"
                                    android:id="@+id/txt_h_year"
                                    android:background="@color/white"
                                    android:textSize="10dp"/>
                            <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="42dp"
                                    android:layout_marginTop="12dp"
                                    android:padding="1dp">
                                <EditText
                                        android:id="@+id/edit_profile_txt_age"
                                        android:layout_width="match_parent"
                                        android:layout_height="40dp"
                                        android:background="@drawable/round_border"
                                        android:gravity="center|left"
                                        android:hint="Year of Birth"
                                        android:inputType="number"
                                        android:maxLength="4"
                                        android:paddingLeft="10dp"
                                        android:textSize="15sp"/>
                                <ImageView
                                        android:layout_width="30dp"
                                        android:layout_marginRight="5dp"
                                        android:visibility="gone"
                                        android:layout_centerVertical="true"
                                        android:layout_alignParentRight="true"
                                        android:layout_height="30dp"/>
                            </RelativeLayout>
                        </RelativeLayout>
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout android:layout_width="match_parent"
                                android:layout_marginTop="15dp"
                                android:layout_height="wrap_content">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:text="Mobile No."
                            android:padding="4dp"
                            android:id="@+id/txt_h_mobile"
                            android:background="@color/white"
                            android:textSize="10dp"/>
                    <EditText
                            android:id="@+id/edit_profile_mobile_number"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="@drawable/round_border"
                            android:ems="10"
                            android:maxLength="10"
                            android:layout_marginTop="12dp"
                            android:gravity="center_vertical"
                            android:hint="Mobile No."
                            android:inputType="number"
                            android:paddingLeft="10dp"
                            android:textSize="15sp"/>
                </RelativeLayout>


                <RelativeLayout android:layout_width="match_parent"
                                android:layout_marginTop="13dp"
                                android:layout_height="wrap_content">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:text="Suburb"
                            android:padding="4dp"
                            android:id="@+id/txt_h_sub"
                            android:background="@color/white"
                            android:textSize="10dp"/>

                    <TextView
                            android:id="@+id/edit_profile_suburb"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="15dp"
                            android:layout_toLeftOf="@+id/img_search_suburb"
                            android:background="@drawable/round_border"
                            android:ems="10"
                            android:gravity="center_vertical"
                            android:hint="Suburb"
                            android:textColor="@color/black"
                            android:inputType="textCapWords"
                            android:maxLength="25"
                            android:paddingLeft="10dp"
                            android:textSize="15sp"/>
                    <ImageView
                            android:id="@+id/img_search_suburb"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="24dp"
                            android:layout_marginRight="15dp"
                            android:src="@android:drawable/ic_menu_search"
                            android:tint="@color/colorPrimaryDark"/>


                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="1dp"
                            android:gravity="center"
                            android:text="Oops, Please enter this Field"
                            android:textColor="@color/btn_orng"
                            android:textSize="10dp"
                            android:visibility="gone"/>
                </RelativeLayout>


                <RelativeLayout android:layout_width="match_parent"
                                android:layout_marginTop="13dp"
                                android:layout_height="wrap_content">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:text="Country"
                            android:padding="4dp"
                            android:clickable="false"
                            android:id="@+id/txt_h_country"
                            android:background="@color/white"
                            android:textSize="10dp"/>
                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/round_border"
                            android:padding="1dp">

                        <ImageView
                                android:layout_width="45dp"
                                android:src="@mipmap/shape_down"
                                android:layout_centerVertical="true"
                                android:layout_alignParentRight="true"
                                android:tint="@color/colorPrimaryDark"
                                android:layout_height="10dp"/>
                        <Spinner
                                android:id="@+id/edit_profile_country_input"
                                android:layout_width="@dimen/spinner_width"
                                android:layout_height="50dp"
                                android:layout_centerHorizontal="true"
                                android:dropDownWidth="279dp"
                                android:ems="10"
                                android:gravity="center"
                                android:background="@null"
                                android:inputType="textCapWords"
                                android:overlapAnchor="false"
                                android:spinnerMode="dropdown"
                                android:paddingLeft="2dp"
                                android:textSize="10sp"/>
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout android:layout_width="match_parent"
                                android:layout_marginTop="13dp"
                                android:layout_height="wrap_content">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:text="Timezone"
                            android:padding="4dp"
                            android:id="@+id/txt_h_zone"
                            android:background="@color/white"
                            android:textSize="10dp"/>
                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/round_border"
                            android:padding="1dp">
                        <ImageView
                                android:layout_width="45dp"
                                android:src="@mipmap/shape_down"
                                android:layout_centerVertical="true"
                                android:layout_alignParentRight="true"
                                android:tint="@color/colorPrimaryDark"
                                android:layout_height="10dp"/>
                        <Spinner
                                android:id="@+id/edit_profile_time_input"
                                android:layout_width="@dimen/spinner_width"
                                android:layout_height="50dp"
                                android:layout_centerHorizontal="true"
                                android:dropDownWidth="279dp"
                                android:ems="10"
                                android:gravity="center"
                                android:inputType="textCapWords"
                                android:overlapAnchor="false"
                                android:background="@null"
                                android:spinnerMode="dropdown"
                                android:paddingLeft="2dp"
                                android:textSize="10sp"/>
                    </RelativeLayout>

                </RelativeLayout>


                <au.com.letsjoinin.android.utils.ViewSwitch
                        android:id="@+id/edit_profile_gdpr_switch"
                        android:layout_marginTop="20dp"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        app:activeTextColor="@android:color/white"
                        app:currentActive="First"
                        app:firstText="GDPR"
                        android:gravity="center"
                        android:layout_gravity="center"
                        app:inActiveTextColor="#282950"
                        app:secondText="OFF"/>

                <TextView
                        android:id="@+id/edit_profile_save_btn"
                        android:layout_width="180dp"
                        android:layout_height="35dp"
                        android:layout_marginTop="22dp"
                        android:layout_marginBottom="36dp"
                        android:background="@drawable/round_back_view_light"
                        android:gravity="center"
                        android:textAllCaps="true"
                        android:layout_gravity="center"
                        android:text="Save"
                        android:elevation="2dp"
                        android:foreground="?android:attr/selectableItemBackgroundBorderless"
                        android:textColor="@color/colorPrimary"
                        android:textSize="15dp"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <RelativeLayout
            android:id="@+id/change_password_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:visibility="gone"
            android:padding="10dp">
        <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                           xmlns:app="http://schemas.android.com/apk/res-auto"
                                           android:layout_width="wrap_content"
                                           android:layout_height="wrap_content"
                                           android:layout_centerInParent="true"
                                           app:cardCornerRadius="8dp"
                                           app:cardBackgroundColor="#fff">
            <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                <LinearLayout
                        android:id="@+id/login_id_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="20dp"


                        android:orientation="vertical">
                    <RelativeLayout android:layout_width="match_parent"
                                    android:layout_height="match_parent">
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="3dp"
                                android:gravity="left"
                                android:singleLine="true"
                                android:text="Change Password"
                                android:textColor="@color/btn_orng"
                                android:textSize="18dp"/>

                        <ImageView
                                android:id="@+id/close_password"
                                android:layout_width="wrap_content"
                                android:layout_alignParentRight="true"
                                android:src="@android:drawable/btn_dialog"
                                android:layout_height="wrap_content"/>

                    </RelativeLayout>
                    <RelativeLayout android:layout_width="match_parent"
                                    android:layout_marginTop="22dp"
                                    android:layout_height="42dp">
                        <EditText
                                android:id="@+id/old_password"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"

                                android:layout_marginRight="55dp"
                                android:background="@drawable/round_border"

                                android:gravity="center_vertical"
                                android:hint="Old Password"
                                android:imeOptions="actionNext"
                                android:inputType="textPassword"
                                android:padding="5dp"
                                android:textColor="@color/colorPrimary"
                                android:textSize="15dp"/>

                        <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                app:srcCompat="@drawable/info"
                                android:layout_marginRight="10dp"
                                android:padding="6dp"
                                android:tint="@color/text_gray"
                                android:layout_alignParentRight="true"
                                android:id="@+id/pasword_info"/>

                    </RelativeLayout>
                    <EditText
                            android:id="@+id/new_password"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="18dp"
                            android:background="@drawable/round_border"
                            android:imeOptions="actionNext"
                            android:inputType="textPassword"
                            android:layout_marginRight="55dp"
                            android:gravity="center_vertical"
                            android:hint="New Password"
                            android:padding="5dp"
                            android:textColor="@color/colorPrimary"
                            android:textSize="15dp"/>


                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="35dp"
                            android:layout_marginTop="3dp"
                            android:gravity="left"
                            android:singleLine="true"
                            android:text="Oops, Please enter this Field"
                            android:textColor="@color/btn_orng"
                            android:textSize="10dp"
                            android:visibility="gone"/>
                    <RelativeLayout android:layout_width="match_parent"

                                    android:layout_marginTop="18dp"
                                    android:layout_height="42dp">

                        <EditText
                                android:id="@+id/new_password_confirm"
                                android:layout_width="match_parent"

                                android:layout_height="40dp"
                                android:background="@drawable/round_border"
                                android:inputType="textPassword"
                                android:layout_marginRight="55dp"
                                android:gravity="center_vertical"
                                android:hint="Confirm Password"
                                android:imeOptions="actionDone"
                                android:padding="5dp"
                                android:textColor="@color/colorPrimary"
                                android:textSize="15dp"/>
                        <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                app:srcCompat="@drawable/info"
                                android:layout_marginRight="10dp"
                                android:padding="6dp"
                                android:visibility="gone"
                                android:tint="@color/text_gray"
                                android:layout_alignParentRight="true"
                                android:id="@+id/confirm_info"/>


                    </RelativeLayout>

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="35dp"
                            android:layout_marginTop="3dp"
                            android:gravity="left"
                            android:singleLine="true"
                            android:text="Oops,Password and Confirm Password not match"
                            android:textColor="@color/btn_orng"
                            android:textSize="10dp"
                            android:visibility="gone"/>
                </LinearLayout>

                <Button
                        android:id="@+id/change_submit"
                        android:layout_width="160dp"
                        android:layout_height="36dp"
                        android:layout_below="@+id/login_id_layout"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="8dp"
                        android:foreground="?android:attr/selectableItemBackgroundBorderless"
                        android:background="@drawable/round_back_view"
                        android:text="Save"
                        android:backgroundTint="@color/btn_orng"
                        android:textAllCaps="true"
                        android:textColor="@color/white"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>

</FrameLayout>