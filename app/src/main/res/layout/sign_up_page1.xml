<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">
    <ScrollView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbars="none">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                      xmlns:app="http://schemas.android.com/apk/res-auto"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:gravity="center_horizontal"
                      android:id="@+id/sign1_parent"
                      android:orientation="vertical">
            <RelativeLayout android:layout_width="match_parent"
                            android:gravity="center"
                            android:layout_marginTop="15dp"
                            android:layout_marginLeft="20dp"
                            android:layout_height="37dp">
            <EditText
                    android:id="@+id/sign_up_tv_email"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/round_border"
                    android:ems="10"
                    android:layout_marginRight="55dp"
                    android:gravity="center_vertical"
                    android:imeOptions="actionNext"
                    android:focusable="true"
                    android:hint="Email Id"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="10dp"
                    android:textSize="15dp"/>
            </RelativeLayout>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:gravity="center"
                    android:text="Oops, Please enter this Field"
                    android:textColor="@color/btn_orng"
                    android:textSize="10dp"
                    android:visibility="gone"/>
            <RelativeLayout android:layout_width="match_parent"
                            android:gravity="center"
                            android:layout_marginTop="15dp"
                            android:layout_marginLeft="20dp"
                            android:layout_height="37dp">

                <EditText
                        android:id="@+id/sign_up_tv_password"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginRight="55dp"
                        android:background="@drawable/round_border"
                        android:ems="10"
                        android:gravity="center_vertical"
                        android:hint="Password"
                        android:inputType="textPassword"
                        android:imeOptions="actionNext"
                        android:paddingLeft="10dp"
                        android:textColor="@color/blue_border"
                        android:textSize="15dp"/>
                <ImageView
                        android:layout_width="37dp"
                        android:layout_height="37dp"
                        app:srcCompat="@drawable/info"
                        android:layout_marginRight="15dp"
                        android:padding="5dp"
                        android:tint="@color/text_gray"
                        android:layout_alignParentRight="true"
                        android:id="@+id/pasword_info" android:layout_alignParentBottom="true"
                        android:layout_marginBottom="0dp"/>


            </RelativeLayout>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:gravity="center"
                    android:text="Oops, Please enter this Field"
                    android:textColor="@color/btn_orng"
                    android:textSize="10dp"
                    android:visibility="gone"/>
            <RelativeLayout android:layout_width="match_parent"
                            android:gravity="center"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="15dp"
                            android:layout_height="37dp">

                <EditText
                        android:id="@+id/sign_up_tv_confirm_pass"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:background="@drawable/round_border"
                        android:ems="10"
                        android:imeOptions="actionDone"
                        android:layout_marginRight="55dp"
                        android:gravity="center_vertical"
                        android:hint="Confirm Password"
                        android:inputType="textPassword"
                        android:paddingLeft="10dp"
                        android:textColor="@color/blue_border"
                        android:textSize="15dp"/>
                <ImageView
                        android:layout_width="37dp"
                        android:layout_height="37dp"
                        app:srcCompat="@drawable/info"
                        android:layout_marginRight="15dp"
                        android:padding="5dp"
                        android:visibility="gone"
                        android:tint="@color/text_gray"
                        android:layout_alignParentRight="true"
                        android:id="@+id/confirm_info"/>


            </RelativeLayout>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:gravity="center"
                    android:text="Oops, that wasn't the right password. Please try again"
                    android:textColor="@color/btn_orng"
                    android:textSize="10dp"
                    android:visibility="gone"/>
            <RelativeLayout android:layout_width="match_parent"
                            android:layout_below="@+id/sign_up_tv_confirm_pass"
                            android:layout_height="match_parent">
                <TextView
                        android:layout_width="wrap_content"
                        android:text="Profile Picture"
                        android:layout_above="@+id/sign_up_avatar"
                        android:layout_marginBottom="10dp"
                        android:layout_centerHorizontal="true"
                        android:layout_height="wrap_content"/>
                <RelativeLayout
                        android:id="@+id/attach_layout"
                        android:layout_width="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/sign_up_avatar"
                        android:visibility="gone">

                    <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">


                        <LinearLayout
                                android:id="@+id/gallery"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center">

                            <LinearLayout
                                    android:layout_width="100dp"
                                    android:layout_height="30dp"
                                    android:background="@mipmap/round_corner_rectangle_white"
                                    android:gravity="center">

                                <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:text="Gallery"
                                        android:textColor="@color/colorPrimary"/>
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                                android:id="@+id/camera"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/gallery"
                                android:layout_marginTop="10dp"
                                android:gravity="center">

                            <LinearLayout
                                    android:layout_width="100dp"
                                    android:layout_height="30dp"
                                    android:background="@mipmap/round_corner_rectangle_white"
                                    android:gravity="center">

                                <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:text="Camera"
                                        android:textColor="@color/colorPrimary"/>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                                android:id="@+id/remove"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:visibility="gone"
                                android:layout_below="@+id/camera"
                                android:layout_marginTop="10dp"
                                android:gravity="center">

                            <LinearLayout
                                    android:layout_width="100dp"
                                    android:layout_height="30dp"
                                    android:background="@mipmap/round_corner_rectangle_white"
                                    android:gravity="center">

                                <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:text="Remove"
                                        android:textColor="@color/colorPrimary"/>
                            </LinearLayout>
                        </LinearLayout>


                    </RelativeLayout>


                </RelativeLayout>
                <de.hdodenhof.circleimageview.CircleImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/sign_up_avatar"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_centerInParent="true"
                        android:src="@mipmap/ic_choose_profile_image"
                        app:civ_border_color="#FF000000"
                        app:civ_border_width="0dp"/>
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>