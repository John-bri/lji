<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent" android:layout_height="match_parent"
                android:gravity="center"
                android:id="@+id/otp_parent"
                android:background="#C0C0C0"
                tools:context=".UI.fragment.ForgotFragment">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="vertical"
                  android:background="@drawable/sign_back_ground"
                  android:layout_width="match_parent"

                  android:layout_height="match_parent">
        <ImageView
                android:id="@+id/imageView"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_marginTop="40dp"
                android:layout_gravity="center"
                app:srcCompat="@mipmap/lji_logo_new_trans"/>
        <TextView
                android:layout_width="match_parent"
                android:text="@string/forgot_display_desc"
                android:layout_marginTop="15dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:gravity="center"
                android:textSize="14sp"
                android:layout_below="@+id/imageView"
                android:layout_gravity="center"
                android:layout_height="wrap_content"/>
        <EditText android:id="@+id/pin_first_edittext"
                  android:layout_width="match_parent"
                  android:layout_height="35dp"
                  android:layout_marginRight="25dp"
                  android:hint="Email Id"
                  android:textSize="15dp"
                  android:layout_marginTop="35dp"
                  android:layout_marginLeft="25dp"
                  android:ems="10"
                  android:paddingLeft="15dp"
                  android:textColor="@color/colorPrimary"
                  android:background="@drawable/round_border"
                  android:contentDescription="@string/pin_content_desc"/>
        <TextView
                android:id="@+id/login_btn"
                android:layout_width="180dp"
                android:layout_height="32dp"
                android:layout_below="@+id/forgot_password_lyt"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:backgroundTint="#D5D2D2"
                android:background="@drawable/round_back_view"
                android:elevation="2dp"
                android:gravity="center"

                android:layout_gravity="center"
                android:text="Send Request"
                android:textAllCaps="true"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"
                android:textColor="@color/colorPrimary"
                android:textSize="15dp"/>
    </LinearLayout>

</RelativeLayout>