<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/otp_parent"
    android:background="#C0C0C0"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:clickable="true"
        android:visibility="gone"
        android:id="@+id/otp_Layout_loading"
        android:layout_height="match_parent">

        <pl.droidsonroids.gif.GifImageView android:layout_width="60dp"
            android:layout_centerInParent="true"
            android:id="@+id/timeline_loading"
            android:layout_height="60dp"
            android:src="@drawable/loading"/>

    </RelativeLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:background="@drawable/sign_back_ground"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout android:layout_width="match_parent"
                android:orientation="horizontal"

                android:background="@color/colorPrimary"
                android:layout_height="55dp">
                <ImageView android:layout_width="50dp"
                    android:padding="16dp"
                    android:id="@+id/back"
                    android:tint="@color/md_deep_orange_A700"
                    android:src="@drawable/left_arrow"
                    android:layout_height="match_parent"/>
                <TextView android:layout_width="match_parent"
                    android:textSize="16dp"
                    android:id="@+id/title"
                    android:textColor="@color/white"
                    android:gravity="center_vertical"
                    android:layout_height="match_parent"/>

            </LinearLayout>
            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="55dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:text="Redeem Channel Invitation"
                android:textColor="@color/white"
                android:textSize="20dp"/>

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_below="@+id/textView2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-30dp"
                android:background="@drawable/round_corner"
                android:padding="10dp"
                app:srcCompat="@drawable/otp_img_tag"/>
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:text="Please enter the OTP we have sent to your registered Email Id"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="visible">

            <EditText
                android:id="@+id/pin_one"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/otp_background"
                android:imeOptions="actionNext"
                android:inputType="textCapCharacters"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/pin_two"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/otp_background"
                android:imeOptions="actionNext"
                android:inputType="textCapCharacters"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/pin_three"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/otp_background"
                android:imeOptions="actionNext"
                android:inputType="textCapCharacters"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/pin_four"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/otp_background"
                android:imeOptions="actionNext"
                android:inputType="textCapCharacters"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/pin_five"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/otp_background"
                android:imeOptions="actionNext"
                android:inputType="textCapCharacters"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/pin_six"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/otp_background"
                android:imeOptions="actionNext"
                android:inputType="textCapCharacters"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <!--<ImageView-->
            <!--android:id="@+id/verify_btn"-->
            <!--android:layout_width="33dp"-->
            <!--android:layout_height="33dp"-->
            <!--android:layout_marginLeft="10dp"-->
            <!--android:src="@drawable/arwright"-->
            <!--android:tint="@color/white"-->
            <!--android:padding="9dp"-->
            <!--android:background="@color/colorPrimary"-->
            <!--android:textAllCaps="false"-->
            <!--android:textColor="@color/white"-->
            <!--android:textSize="15dp"/>-->
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/txt_resend_otp"
                android:layout_width="145dp"
                android:layout_height="35dp"
                android:layout_below="@+id/forgot_password_lyt"
                android:layout_gravity="center"
                android:backgroundTint="#D5D2D2"
                android:layout_marginRight="10dp"
                android:background="@drawable/round_border"
                android:gravity="center"
                android:text="CANCEL"
                android:elevation="2dp"
                android:textAllCaps="true"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"
                android:textColor="@color/colorPrimary"
                android:textSize="13sp"/>
            <TextView
                android:id="@+id/verify_btn"
                android:layout_width="140dp"
                android:layout_height="35dp"
                android:layout_below="@+id/forgot_password_lyt"
                android:layout_gravity="center"
                android:backgroundTint="#D5D2D2"
                android:background="@drawable/round_border"
                android:gravity="center"
                android:text="OK"
                android:layout_marginLeft="10dp"
                android:elevation="2dp"
                android:textAllCaps="true"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"
                android:textColor="@color/colorPrimary"
                android:textSize="13sp"/>
        </LinearLayout>


    </LinearLayout>

    <RelativeLayout android:layout_width="match_parent"
        android:gravity="center"
        android:visibility="gone"
        android:clickable="true"
        android:background="@color/trasnsparentBlack"
        android:id="@+id/progress_lyt"
        android:layout_height="match_parent">
        <com.wang.avi.AVLoadingIndicatorView
            android:layout_width="wrap_content"
            android:id="@+id/pro_img"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            app:indicatorName="BallTrianglePathIndicator"
            app:indicatorColor="@color/white"/>
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="Processing..."
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_below="@+id/pro_img"
            android:textSize="18dp"/>
    </RelativeLayout>

</RelativeLayout>