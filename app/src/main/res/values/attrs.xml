<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="loader_view">
        <attr name="width_weight" format="float"/>
        <attr name="height_weight" format="float"/>
        <attr name="use_gradient" format="boolean"/>
        <attr name="corners" format="integer"/>
        <attr name="custom_color" format="color"/>
    </declare-styleable>
    <declare-styleable name="Pinview">
        <attr name="pinBackground" format="reference"/>
        <attr name="pinLength" format="integer"/>
        <attr name="pinWidth" format="dimension"/>
        <attr name="pinHeight" format="dimension"/>
        <attr name="splitWidth" format="dimension"/>
        <attr name="cursorVisible" format="boolean"/>
        <attr name="password" format="boolean"/>
        <attr name="forceKeyboard" format="boolean"/>
        <attr name="hint" format="string"/>
        <attr name="inputType"/>
        <attr name="textSize" format="dimension"/>
    </declare-styleable>
    <attr name="inputType" format="enum">
        <enum name="text" value="0"/>
        <enum name="number" value="1"/>
    </attr>


    <declare-styleable name="easy_flip_view">
        <attr name="flipOnTouch" format="boolean"/>
        <attr name="flipDuration" format="integer"/>
        <attr name="flipType" format="string"/>
        <attr name="flipFrom" format="string"/>
        <attr name="flipEnabled" format="boolean"/>
        <attr name="flipOnceEnabled" format="boolean"/>
        <attr name="autoFlipBack" format="boolean"/>
        <attr name="autoFlipBackTime" format="integer"/>
        <attr name="animFlipInId" format="reference"/>
        <attr name="animFlipOutId" format="reference"/>
    </declare-styleable>
</resources>